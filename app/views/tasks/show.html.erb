
<h1>
  <% if @task.completed? %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
  <%= @task.title %>
</h1>

<h1><%= @task.details %></h1>


<p>
  <%= link_to 'delete task',
              task_path(@task),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</p>

<p><%= link_to 'Home', tasks_path %></p>
<p><%= link_to 'edit', edit_task_path %></p>
