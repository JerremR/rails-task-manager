
<h4>Tasks</h4>
<ul style="list-style: none;">
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed? %>
      <i class="far fa-check-square"></i>
      <% else %>
      <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task)%>
    </li>
  <% end %>
</ul>

<p><%= link_to 'new', new_task_path %></p>

